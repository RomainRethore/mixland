<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		{% block body %}
			<nav>
				{% if app.user is null  %}
					<button>
						<a href={{path("app_register")}}>Register</a>
					</button>
					<button>
						<a href={{path("app_login")}}>Login</a>
					</button>
				{% endif %}
				<button>
					<a href={{path("home")}}>Home</a>
				</button>
				<button>
					<a href={{path("app_mix")}}>My Mixes</a>
				</button>
				<button>
					<a href={{path("app_logout")}}>Logout</a>
				</button>

			</nav>
			<header>MixLand</header>
			<main>
				{% block content %}{% endblock %}
			</main>
			<footer></footer>
		{% endblock %}
	</body>
</html>
